<!DOCTYPE html>
<html>
  {{> head}}
  <body class="body-open-course">
    {{> navbar}}

    <div id="empty-open-course" class="container-fluid empty-no-courses-container">
      <div class="row">
        <div class="col-md-12">
          <div class="empty-no-courses">
            You have no existing courses.
          </div>
        </div>
      </div>
    </div>

    <div id="open-course-container" class="container-fluid open-course-container offset-top">
      <div class="row">
        <div class="col-md-12">
          <div class="new-course-title">
            Open an Existing Course
          </div>
        </div>
      </div>

      <div id="open-courses-list" class="row">
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="basicExample" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title w-100" id="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                  <div id="modal-id"></div>
                  <div id="modal-date-created"></div>
                  <div class="modal-course-progress-container">
                    <div id="modal-course-progress"></div>
                    <div>
                      <canvas id="modal-course-progress-chart" class="modal-course-progress-chart"></canvas>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-modal btn-modal-close" data-dismiss="modal">CLOSE</button>
                    <button type="button" id="btn-modal-delete" class="btn btn-danger btn-modal btn-modal-delete">DELETE COURSE</button>
                    <button type="button" class="btn btn-primary btn-modal btn-modal-open">OPEN COURSE</button>
                </div>
            </div>
        </div>
    </div>

    <div id="loading-container" class="loading-container">
      <div class="container-fluid loading-main">
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <div id="loading-title" class="loading-title">
            </div>
          </div>
          <div class="col-md-4"></div>
        </div>
        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <div class="loader"></div>
          </div>
          <div class="col-md-4"></div>
        </div>
      </div>
    </div>

    <script type="text/javascript">
      let savedCourses = {{{savedCourses}}};
    </script>
    <script type="text/javascript" src="/js-lib/chart.min.js"></script>
    <script type="text/javascript" src="/js-es6/openCourse.js"></script>
  </body>
</html>
